<body>
    <div class="container login-container">
        <div class="row">
            <div class="col-md-6 ads" style="height:520px">
                <h1><span id="fl">[HN_FR_.NET_18_10] BUF_ Mock Project _ Service Directory</span></h1>
                <div style="padding-top:50px" class="profile-img">
                    <img src="~/pipImage.png" alt="profile_img" height="140px" width="140px;">
                </div>
            </div>
            <div class="col-md-6 login-form" style="height:520px">
                <div style="padding:10px;">
                    <h3>Add New User</h3>
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" , @id = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        if (TempData["Error"] != null)
                        {
                            <span style="color:#a94442">@TempData["Error"].ToString()</span>
                        }
                        <div class="form-group">
                            @Html.LabelFor(m => m.Email, new { @class = "control-label text-info" })
                            <div class="">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control input-sm chat-input", placeholder = "Email" })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Username, new { @class = "control-label text-info" })
                            <div class="">
                                @Html.TextBoxFor(m => m.Username, new { @class = "form-control input-sm chat-input", placeholder = "Username" })
                                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Password, new { @class = "control-label text-info" })
                            <div class="">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control input-sm chat-input", placeholder = "Password" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label text-info" })
                            <div class="">
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control input-sm chat-input", placeholder = "ConfirmPassword" })
                                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label text-info" for="RoleCode">User role</label><span style="color:red">*</span>
                            <select name="RoleCode" id="RoleCode" class="form-control">
                                <option value="">---Select role---</option>
                                @foreach (var item in (List<IdentityRole>)ViewBag.Roles)
                                {
                                    <option value="@item.Name">@item.Name</option>
                                }
                            </select>
                        </div>

                        <div class="form-group" style="justify-content:center;display:flex">
                            <input type="submit" class="btn btn-success" value="Register" />
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
