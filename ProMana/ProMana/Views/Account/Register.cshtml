@model IdentitySample.Models.UserInfoAccoutViewModel
@{
    /**/
    
    ViewBag.Title = "Register";
}
@using Microsoft.AspNet.Identity;
@using Microsoft.AspNet.Identity.EntityFramework;

<html>
<head>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <style>
        body {
            font-family: 'Montserrat', sans-serif;
            transition: 3s;
        }

        .login-container {
            margin-top: 1%;
            border: 1px solid #CCD1D1;
            border-radius: 5px;
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
            max-width: 100%;
        }

        .ads {
            background-color: #A569BD;
            border-top-left-radius: 5px;
            border-bottom-left-radius: 5px;
            color: #fff;
            padding: 15px;
            text-align: center;
        }

            .ads h1 {
                margin-top: 20%;
            }

        #fl {
            font-weight: 600;
        }

        #sl {
            font-weight: 100 !important;
        }

        .profile-img {
            text-align: center;
        }

            .profile-img img {
                border-radius: 50%;
                /* animation: mymove 2s infinite; */
            }

        @@keyframes mymove {
            from {
                border: 1px solid #F2F3F4;
            }

            to {
                border: 8px solid #F2F3F4;
            }
        }

        .login-form {
        }

            .login-form h3 {
                text-align: center;
                padding-top: 15px;
                padding-bottom: 15px;
            }

        .form-control {
            font-size: 14px;
        }

        .forget-password a {
            font-weight: 500;
            text-decoration: none;
            font-size: 14px;
        }

        body {
            background-image: url('../../img/wp2570965.jpg');
            /* Full height */
            height: 100%;
            /* Center and scale the image nicely */
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
        }
    </style>
</head>
<!------ Include the above in your HEAD tag ---------->
<body style="background-color:rgba(0, 0, 0, 0.19)">
    <div class="container login-container" style="background-color:#A569BD">
        <div class="row">
            <div class="col-md-12 row login-form" style="width:103%">
                <div class="col-md-6 ads">
                    <h1><span id="fl">PROMANA  </span></h1>
                    <h2>Project Management System</h2>
                    <p><img style="height:30%" src="~/img/PM-Logo.png" /></p>
                </div>
                <div class="col-md-6" style="padding:15px; background-color:white;">
                    <h3>Register</h3>
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <div class="col-md-12">
                                    @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label text-info" })
                                    @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-12">
                                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label text-info" })
                                    <input name="Email" id="Email" type="email" class="form-control" />
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-12">
                                    @Html.LabelFor(model => model.FullName, htmlAttributes: new { @class = "control-label text-info" })
                                    @Html.EditorFor(model => model.FullName, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-12">
                                    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label text-info" })
                                    <input name="Password" id="Password" type="password" class="form-control" />
                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-12">
                                    @Html.LabelFor(model => model.ConfirmPassword, htmlAttributes: new { @class = "control-label text-info" })
                                    <input name="ConfirmPassword" id="ConfirmPassword" type="password" class="form-control" />
                                    <label class="errors" id="ConfirmPasswordError"></label>
                                    @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-12">
                                    @Html.LabelFor(model => model.CurrentJob, htmlAttributes: new { @class = "control-label text-info" })
                                    @Html.EditorFor(model => model.CurrentJob, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.CurrentJob, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-12">
                                    @Html.LabelFor(model => model.Company, htmlAttributes: new { @class = "control-label text-info" })
                                    @Html.EditorFor(model => model.Company, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Company, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-7">
                                    @Html.LabelFor(model => model.CountExperience, htmlAttributes: new { @class = "control-label text-info" })
                                    <input name="CountExperience" min="0" id="CountExperience" type="number" step="0.1" class="form-control" />
                                    @Html.ValidationMessageFor(model => model.CountExperience, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-5">
                                    @Html.LabelFor(model => model.TimeUnit, htmlAttributes: new { @class = "control-label text-info" })
                                    <select name="TimeUnit" id="TimeUnit" class="form-control">
                                        <option value="">-- Choose Unit --</option>
                                        <option value="Week">Week</option>
                                        <option value="Month">Month</option>
                                        <option value="Year">Year</option>
                                    </select>
                                    <label class="errors" id="TimeUnitError"></label>
                                    @Html.ValidationMessageFor(model => model.TimeUnit, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Register" id="btnSubmit" class="btn btn-success pull-right" />
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</body>
</html>
