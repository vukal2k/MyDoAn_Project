@model DTO.MinorWorkProject
<form id="formUpdateMinorWorks" action='@Url.Action(" "," ")' method="post"></form>

<div id="updateMinorWorksModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" onclick="$('#updateMinorWorksModal').modal('hide')">&times;</button>
                <h4 class="modal-title">Project / Minor Works Details</h4>
                <div class="pull-right">
                    <button type="button" class="btn btn-success">Save</button>
                    <button type="button" class="btn btn-default" onclick="$('#updateMinorWorksModal').modal('hide')">Cancel</button>
                </div>
            </div>
            <div class="modal-body row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="MinorWorksDescription">P/MW Description</label>
                        <textarea form="formUpdateMinorWorks" style="height:110px" name="MinorWorksDescription" id="MinorWorksDescription" class="form-control"></textarea>
                    </div>
                    <div class="form-inline">
                        <label>
                            <input type="radio" name="ProjectOrMinorWorks" value="Project" checked />Project
                            <input type="radio" name="ProjectOrMinorWorks" value="Minor Works" />Minor Works
                        </label>
                    </div>
                    <br />
                    <br />

                    <div class="form-group">
                        <label for="IsTBA">Is TBA?<input type="checkbox" id="IsTBA" onchange="disableAndEnableWhenCheck(this, 'NoteActions', 'EstimatedCost')" name="IsTBA" value="true" /></label>
                    </div>

                    <div class="form-group">
                        <label for="NoteActions">Note Actions</label>
                        <textarea form="formUpdateMinorWorks" style="height:110px" name="NoteActions" disabled id="NoteActions" class="form-control"></textarea>
                    </div>

                    <div class="form-group">
                        <label for="EstimatedCost">Estimated Cost</label>
                        <input form="formUpdateMinorWorks" type="number" name="EstimatedCost" id="EstimatedCost" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label for="ActualCost">Actual Cost</label>
                        <input form="formUpdateMinorWorks" type="number" name="ActualCost" id="ActualCost" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="Diractorate">Diractorate</label>
                        <select id="Diractorate" form="formUpdateMinorWorks" name="Diractorate" class="form-control">
                            <option>
                                1
                            </option>
                            <option>
                                2
                            </option>
                        </select>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-inline">
                        <labe for="Contact">Contact</labe><br />
                        <input type="text" readonly name="ContactName" id="ContactName" class="form-control" style="width:80% !important" />
                        <input form="formUpdateMinorWorks" type="hidden" name="Contact" id="Contact" />
                        <a class="aHover pull-right" id="ContactLookup" style="margin-top:5px">Lookup</a>
                    </div>
                    <div class="form-inline">
                        <label for="AuthorisedbyName">Authorised by Name</label><br />
                        <input type="text" readonly name="Authorisedby" id="Authorisedby" class="form-control" style="width:80% !important" />
                        <input form="formUpdateMinorWorks" type="hidden" name="AuthorisedbyName" id="AuthorisedbyName" />
                        <a class="aHover pull-right" id="ContactLookup" style="margin-top:5px">Lookup</a>
                    </div>

                    <div class="form-inline">
                        <label for="MWStatus">Status</label><br />
                        <input type="text" readonly name="MWStatus" id="MWStatus" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label for="EnquiryReceiveDate">Enquiry Receive Date</label><span style="color:red">*</span>
                        <input form="formUpdateMinorWorks" type="text" name="ActualCost" id="EnquiryReceiveDate" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label for="AuthorisedDate">Authorised Date</label>
                        <input form="formUpdateMinorWorks" type="text" name="AuthorisedDate" id="AuthorisedDate" class="form-control" />
                        <span style="color:red" id="AuthorisedDateError"></span>
                    </div>

                    <div class="form-group">
                        <label for="ActualStartDate">Actual Start Date</label>
                        <input form="formUpdateMinorWorks" onchange="LoadMinorWorkStatus()" type="text" name="ActualStartDate" id="ActualStartDate" class="form-control" />
                        <span style="color:red" id="ActualStartDateError"></span>
                    </div>

                    <div class="form-group">
                        <label for="AnticipatedCompletion">Anticipated Completion</label>
                        <input form="formUpdateMinorWorks" onchange="LoadMinorWorkStatus()" type="text" name="AnticipatedCompletion" id="AnticipatedCompletion" class="form-control" />
                        <span style="color:red" id="AnticipatedCompletionError"></span>
                    </div>

                    <div class="form-group">
                        <label for="ActualCompletionDate">Actual Completion Date</label>
                        <input form="formUpdateMinorWorks" onchange="LoadMinorWorkStatus()" type="text" name="ActualCompletionDate" id="ActualCompletionDate" class="form-control" />
                        <span style="color:red" id="ActualCompletionDateError"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
<script>
    $("#formUpdateMinorWorks").validate({
        onfocusout: false,
        onkeyup: false,
        onclick: false,
        rules: {
            "MinorWorksDescription": {
                required: true
            }
        },
        highlight: function (element) {
            $(element).parent().addClass('has-error');
        },
        unhighlight: function (element) {
            $(element).parent().removeClass('has-error');
        },
    });
</script>
}