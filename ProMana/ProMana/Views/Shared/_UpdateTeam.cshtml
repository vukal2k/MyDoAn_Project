@model DTO.Department

<form action='@Url.Action("","")' method="post" id="formTeamUpdateUpdate">@Html.AntiForgeryToken()</form>

<div id="teamUpdateModal" data-backdrop="true" class="modal fade" role="dialog" data-keyboard="false">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Team</h4>
                <div class="pull-right">
                    <button type="button" class="btn btn-success">Save</button>
                    <button type="button" class="btn btn-default" onclick="$('#teamUpdateModal').modal('hide')">Cancel</button>
                </div>
            </div>
            <div class="modal-body row">
                <div class="col-md-6">
                    <br />
                    <div class="form-inline">
                        <label for="TeamName">Team Name</label><span style="color:red">*</span><br />
                        <input form="formTeamUpdate" style="width:100%" type="text" name="TeamName" id="TeamName" class="form-control" />
                    </div>
                    <br />

                    <div class="form-inline">
                        <label for="ShortDescription">Team Short Description</label>
                        <br />
                        <textarea form="formTeamUpdate" style="width:100%" name="ShortDescription" id="ShortDescription" class="form-control"></textarea>
                    </div>
                    <br />

                    <div class="form-inline">
                        <label for="ContactId">Lead Contact</label><br />
                        <input form="formTeamUpdate" type="text" name="ContactName" style="width:80%" readonly id="ContactName" class="form-control" />
                        <input form="formTeamUpdate" type="hidden" name="ContactId" id="ContactId" />
                        <a class="aHover pull-right" id="ContactIdLookup" style="margin-top:5px">Lookup</a>
                    </div>
                    <br />
                    <div class="form-inline">
                        <label>
                            Copy Address from Organisation
                            <br />
                            <br />
                            <input type="radio" value="Organisation" />Organisation
                            <input type="radio" value="Parent" />Parent
                        </label>
                    </div>
                    <br />

                    <div class="form-inline">
                        <label for="AddressLine1">Address Line 1</label><span style="color:red">*</span><br />
                        <input form="formTeamUpdate" style="width:100%" type="text" name="AddressLine1" id="AddressLine1" class="form-control" />
                    </div>
                    <br />

                    <div class="form-inline">
                        <label for="AddressLine2">Address Line 2</label><br />
                        <input form="formTeamUpdate" style="width:100%" type="text" name="AddressLine2" id="AddressLine2" class="form-control" />
                    </div>
                    <br />

                    <div class="form-inline">
                        <label for="AddressLine3">Address Line 3</label><br />
                        <input form="formTeamUpdate" style="width:100%" type="text" name="AddressLine3" id="AddressLine3" class="form-control" />
                    </div>
                    <br />

                    <div class="form-inline">
                        <label for="PostCode">PostCode</label><span style="color:red">*</span><br />
                        <input form="formTeamUpdate" type="text" name="PostCode" id="PostCode" class="form-control" style="width:80% !important" />
                        <a class="aHover pull-right" id="PostCode" style="margin-top:5px">Lookup</a>
                    </div>
                    <br />
                    <div class="form-inline">
                        <label for="Town">City/Town</label><br />
                        <input form="formTeamUpdate" style="width:100%" type="text" name="Town" id="Town" class="form-control" />
                    </div>
                    <br />

                    <div class="form-inline">
                        <label for="County">County</label><br />
                        <input form="formTeamUpdate" style="width:100%" type="text" name="County" id="County" class="form-control" />
                    </div>
                    <br />

                    <div class="form-inline">
                        <label for="Country">Country</label><br />
                        <select form="formTeamUpdate" style="width:100%" id="Country" name="Country" class="form-control">
                            <option>
                                1
                            </option>
                            <option>
                                2
                            </option>
                        </select>
                    </div>
                    <br />
                </div>
                <div class="col-md-6">
                    <br />
                    <div class="form-inline">
                        <label for="TypeOfBussinessId">Type Of Bussiness</label><span style="color:red">*</span><br />
                        <input form="formTeamUpdate" type="text" name="TypeOfBussinessName" required readonly id="TypeOfBussinessName" class="form-control" style="width:80% !important" />
                        <input form="formTeamUpdate" type="text" style="display:none" value="" name="TypeOfBussinessId" />
                        <a class="aHover pull-right" id="TypeOfBussinessId" style="margin-top:5px">Lookup</a>
                    </div>
                    <br />

                    <div class="form-inline">
                        <label for="SICCode">SIC Code</label><br />
                        <input form="formTeamUpdate" type="text" readonly id="SICCode" class="form-control" style="width:80% !important" />
                    </div>
                    <br />

                    <div class="form-inline">
                        <label for="FullDescription">Organisation Full Description</label><br />
                        <textarea form="formTeamUpdate" style="height:110px; width:100%" name="FullDescription" id="ShortDescription" class="form-control"></textarea>
                    </div>

                    <div class="form-inline">
                        <label for="PhoneNumber">Phone Number</label><br />
                        <input form="formTeamUpdate" style="width:100%" type="text" name="PhoneNumber" id="PhoneNumber" class="form-control" />
                    </div>
                    <br />

                    <div class="form-inline">
                        <label for="Fax">Fax</label><br />
                        <input form="formTeamUpdate" style="width:100%" type="text" name="Fax" id="Fax" class="form-control" />
                    </div>
                    <br />

                    <div class="form-inline">
                        <label for="Email">Email</label><br />
                        <input form="formTeamUpdate" style="width:100%" type="email" name="Email" id="Email" class="form-control" />
                    </div>
                    <br />

                    <div class="form-inline">
                        <label for="WebAddress">Web Address</label><br />
                        <input form="formTeamUpdate" style="width:100%" type="text" name="WebAddress" id="WebAddress" class="form-control" />
                    </div>
                    <br />

                    <div class="form-inline">
                        <label for="CharityNumber">Charity Number</label><br />
                        <input form="formTeamUpdate" style="width:100%" type="text" name="CharityNumber" id="CharityNumber" class="form-control" />
                    </div>
                    <br />

                    <div class="form-inline">
                        <label for="CompanyNumber">Company Number</label><br />
                        <input form="formTeamUpdate" type="text" name="CompanyNumber" id="CompanyNumber" class="form-control" />
                    </div>
                    <br />
                </div>
            </div>
        </div>
    </div>
</div>