    <!-- Google Font -->
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
    <style>
        .aHover {
            color: #337ab7;
        }

            .aHover:hover {
                cursor: pointer;
            }

        .myFooter {
            background-color: #605ca8;
            padding-top: 3%;
            padding-bottom: 5%;
            padding-left: 14%;
            padding-right: 14%;
            color: white;
            display: inline-block;
            width: 100%;
            position: absolute;
            z-index: 100 !important;
        }

        .myHeader {
            background-color: #605ca8;
            width: 100%;
            padding-top: 1%;
            padding-bottom: 3%;
            padding-left: 14%;
            color: white;
            z-index: 100 !important;
            position:relative;
        }

        .myNav {
            position: absolute !important;
            color: white;
            margin-left: 10%;
            margin-top: 2.5%;
        }

        #buttonAddProject {
            position: absolute;
            margin-left: 70% !important;
            margin-top: -1%;
            box-shadow: 0 1px,5px, #000000;
        }

        .errors {
            color: red;
