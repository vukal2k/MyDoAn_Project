                                            </td>
                                            <td>
                                                @task.UserInfo1.FullName (@task.UserInfo1.UserName)
                                            </td>
                                            <td>
                                                @task.UserInfo.FullName (@task.UserInfo.UserName)
                                            </td>
                                            <td>
                                                @task.From
                                            </td>
                                            <td>
                                                @task.To
                                            </td>
                                            <td>
                                                @task.Severity
                                            </td>
                                            <td>
                                                @task.Priority
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    index++;
}

