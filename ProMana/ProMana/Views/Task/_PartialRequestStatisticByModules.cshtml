                                                @task.UserInfo1.FullName (@task.UserInfo1.UserName)
                                            </td>
                                            <td>
                                                @task.UserInfo.FullName (@task.UserInfo.UserName)
                                            </td>
                                            <td>
                                                @task.From
                                            </td>
                                            <td>
                                                @task.To
                                            </td>
                                            <td>
                                                @task.Severity
                                            </td>
                                            <td>
                                                @task.Priority
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <div role="tabpanel" id="@string.Format("RequestByCancelled{0}",index)" class="tab-pane fade container" style="width:100% !important">
                            <h3>Cancelled</h3>
                            <table class="table table-bordered UseDataTables">
                                <thead>
                                    <tr>
                                        <th>Request Name</th>
                                        <th>Created By</th>
                                        <th>Reporting To</th>
                                        <th>From</th>
                                        <th>To</th>
                                        <th>
                                            Severity
                                        </th>
                                        <th>
                                            Priority
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var task in item.RequestByCancelled.Tasks)
                                    {
