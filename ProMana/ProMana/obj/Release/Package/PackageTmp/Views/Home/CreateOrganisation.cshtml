@section Scripts {
    <script>
        function showDetails3 (checkbox) {
            if (checkbox.checked) {
                $("#menuDetails").show();
            }
            else {
                $("#menuDetails").hide();
            }
        };
        //validate
        $("#formOrganisation").validate({
            onfocusout: false,
            onkeyup: false,
            onclick: false,
            rules: {
                "OrganisationName": {
                    required: true
                },
                "ShortDescription": {
                    required: true,
                    minlength: 300
                },
                "AddressLine1": {
                    required: true
                },
                "PostCode": {
                    required: true
                },
                "TypeOfBussinessName": {
                    required: true,
                    minlength: 0
                },
                "PhoneNumber": {
                    required: true,
                    minlength: 7
                }
            },
            highlight: function (element) {
                $(element).parent().addClass('has-error');
            },
            unhighlight: function (element) {
                $(element).parent().removeClass('has-error');
            },
        });
    </script>
