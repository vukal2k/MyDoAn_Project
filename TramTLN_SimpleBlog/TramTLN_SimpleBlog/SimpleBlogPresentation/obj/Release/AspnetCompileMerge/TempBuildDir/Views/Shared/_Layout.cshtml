<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>DR SLEEPING Blog - @ViewBag.Title</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="robots" content="all,follow">
    <!-- Bootstrap CSS-->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome CSS-->
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <!-- Custom icon font-->
    <link href="~/Content/fontastic.css" rel="stylesheet" />
    <!-- Google fonts - Open Sans-->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700">
    <!-- Fancybox-->
    <link href="~/Content/jquery.fancybox.min.css" rel="stylesheet" />
    <!-- theme stylesheet-->
    <link href="~/Content/style.default.css" rel="stylesheet" />
    <!-- Custom stylesheet - for your changes-->
    <link href="~/Content/custom.css" rel="stylesheet" />
    <script>
    //    function Search() {
    //        $.ajax({
    //            url: '../Blog/Search',
    //            type: 'POST',
    //            dataType: 'html',
    //            data: {
    //                search: $('#searchText').val()
    //            },
    //            success: function (result) { $('#noiPostDungChan').html(result) }
    //        });
    //        ResetPage();
    //}
    </script>
</head>
<body>
    <header class="header">
        <!-- Main Navbar-->
        <nav class="navbar navbar-expand-lg">
            <div class="container">
                <!-- Navbar Brand -->
                <div class="navbar-header d-flex align-items-center justify-content-between">
                    <!-- Navbar Brand --><a href="~/Home" class="navbar-brand"><h2>DR SLEEPING Blog</h2></a>
                    <!-- Toggle Button-->
                    <button type="button" data-toggle="collapse" data-target="#navbarcollapse" aria-controls="navbarcollapse" aria-expanded="false" aria-label="Toggle navigation" class="navbar-toggler"><span></span><span></span><span></span></button>
                </div>
                <!-- Navbar Menu -->
                <div id="navbarcollapse" class="collapse navbar-collapse">
                    <ul class="navbar-nav ml-auto">
                        @Html.Partial("_LoginPartial")
                    </ul>
                </div>
            </div>
        </nav>
        <nav class="" style="background-color:#28a745; width:100%; height:25px !important;">
            <div class="container">
                <a href="#myFooter" style="color:white; font-size:13px">Liên Hệ</a>
            </div>
        </nav>
    </header>
    <div class="">
        <div class="row">
            <!-- Posts -->
            <div class="posts-listing col-lg-1"></div>
            <main class="posts-listing col-lg-8">
                <div class="container">
                    <div class="row">
                        @RenderBody()
                    </div>

                </div>
                <!---- paging -->
                <nav aria-label="Page navigation example" style="display:none" id="navForPaging">
                    <ul class="pagination pagination-template d-flex justify-content-center">
                        <li class="page-item">
                            <button class="btn btn-danger" id="DownerPage" onclick="UpDownPage(false)"><i class="fa fa-angle-left"></i></button>
                        </li>
                        <li class="page-item text-center">

                            <input type="text" class="form-text text-center" style="width:30%;display:inline" id="currentPage" min="1" onkeyup="ChangeCurrentPage()" /> <b> / </b> <b id="maxPage"></b>

                        </li>
                        <li>
                            <button class="btn btn-danger" id="UpperPage" onclick="UpDownPage(true)"><i class="fa fa-angle-right"></i></button>
                        </li>
                    </ul>
                </nav>
            </main>
            <aside class="col-lg-2">
                <!-- Widget [Search Bar Widget]-->
                <div class="widget search">
                    <header>
                        <h3 class="h6">Tìm kiếm blog</h3>
                    </header>
                    <form action="~/Blog/Search" method="get" class="search-form">
                        <div class="form-group">
                            @{
                                var searchText = (ViewBag.Search != null) ? ViewBag.Search : "";
                            }
                            <input type="text" value="@searchText" id="searchText" name="search" placeholder="Bạn ơi mình tìm gì thế?" />

                            <button style="margin-top:10px" type="submit" class="btn btn-success">Tìm</button>
                        </div>
                    </form>
                </div>
                <!-- Widget [Latest Posts Widget]        -->
                <div class="widget latest-posts">
                    <header>
                        <h3 class="h6">Bài Mới Nhất Nè</h3>
                    </header>
                    <div class="blog-posts">
                        @Html.Action("LatestPost", "Blog")
                    </div>
                </div>
                <!-- Widget [Categories Widget]-->
                <div class="widget categories">
                    <header>
                        <h3 class="h6">Categories</h3>
                    </header>

                    @Html.Action("GetCategories", "Category")
                </div>
                <!-- Widget [Tags Cloud Widget]-->
                <div class="widget tags">
                    <header>
                        <h3 class="h6">Tags</h3>
                    </header>
                    <ul class="list-inline">
                        @Html.Action("GetAllTag", "Tag")
                    </ul>
                </div>
            </aside>
            <div class="posts-listing col-lg-1"></div>
        </div>
    </div>
    <!-- Page Footer-->
    <footer class="main-footer" id="myFooter">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <div class="logo">
                        <h6 class="text-white">Dr Sleeping Blog</h6>
                    </div>
                    <div class="contact-details">
                        <p>Fresher .NET FPT Software Hola</p>
                        <p>Email: vuanlbv@gmail.com</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="copyrights">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <p>&copy; 2017. All rights reserved. Your great site.</p>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <!-- JavaScript files-->
    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/popper.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.cookie.js"></script>
    <script src="~/Scripts/jquery.fancybox.min.js"></script>
    <script src="~/Scripts/front.js"></script>
    <script src="~/Scripts/pagingPost-jquery.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
